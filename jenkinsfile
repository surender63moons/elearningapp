pipeline {
  agent any

  environment {
    BUILD_DIR = 'dist/ELearningApp' // Change to your actual app name
  }
  
  stages {
    stage('Checkout') {
      steps {
        git url: 'https://github.com/surender63moons/elearningapp.git', branch: 'master'
   //     Checkout scm
      }
    }
    stage('Install Dependencies') {
      steps {
       bat 'npm ci'
      }
    }
    stage('Build') {
      steps {
       bat 'npm run build'
      }
    }
    stage('Archive Artifacts') {
      steps {
        archiveArtifacts artifacts: "${BUILD_DIR}/**"
      }
    }
    //stage('Deploy') {
      //steps {
        // Add deployment steps (e.g., Docker build/push, SCP to server, etc.)
      //}
   // }
  }

  post {
    success {
      echo 'Build completed!'
    }
    failure {
      echo 'Build failed.'
    }
  }
}
